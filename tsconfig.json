{
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node",
            "@types/jest"
        ],
        "typeRoots": [
            "**/node_modules/@types/"
        ],
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {}
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
}